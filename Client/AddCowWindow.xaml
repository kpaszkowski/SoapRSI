<Window x:Class="Client.AddCowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="iCow - Add Cow" Height="350" Width="500" Background="#73e573">
    <StackPanel>
        <Label>Name</Label>
        <TextBox x:Name="Name"></TextBox>
        
        <Label>CowBread</Label>
        <ComboBox x:Name="CowBread"></ComboBox>
        
        <Label>Birth</Label>
        <DatePicker x:Name="birth"></DatePicker>

        <Label>Calving</Label>
        <DatePicker x:Name="calving"></DatePicker>

        <Label>TagNumber</Label>
        <TextBox x:Name="TagNumber"></TextBox>

        <Label></Label>
        <Label></Label>
        <Button Content="Add"  Grid.Row="1" VerticalAlignment="Bottom" Style="{StaticResource RoundedButtonStyle}"  Background="#FFCBFFC9" Width="200" Height="50" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" Click="AddButtonClick"/>
    </StackPanel>
</Window>
