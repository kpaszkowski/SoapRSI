<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Get all cows" Click="GetAllCowsButtonClick"></Button>
        <Button Content="Get calving cows" Click="GetCalvingCowsButtonClick"></Button>
        <Button Content="Get dry off cows" Click="GetDryOffCowsButtonClick"></Button>
        <Button Content="Add cow" Click="AddCowButtonClick"></Button>
        <Button Content="Export as PDF" Click="GetPdfButtonClick"></Button>
    </StackPanel>
</Window>
